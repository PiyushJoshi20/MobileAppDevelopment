<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F3F4"> <!-- Light cool gray background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">


<!--         1st change-->
        <!-- Dashboard title with navy blue background -->
        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="27sp"
            android:textColor="#FFFFFF"
            android:background="#003366"
        android:gravity="center"
        android:padding="10dp"/>

        <!-- Profile section with image and info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0E0E0"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            android:layout_marginEnd="66dp"
            android:background="@drawable/circular_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name: Rahul Yewale -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rahul Yewale"
                android:textSize="18sp"
                android:textColor="#003366"
            android:textStyle="bold" />

            <!-- ID: 108 -->
            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 108"
                android:textSize="16sp"
                android:textColor="#003366"
            android:textStyle="bold" />

            <!-- Department: Department - IT -->
            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: IT"
                android:textSize="16sp"
                android:textColor="#003366"
            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- GridLayout for buttons with spacing and adjusted size -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:rowCount="5"
        android:paddingBottom="20dp"
        android:background="#FFFFFF"> <!-- White background for the icons -->

        <!-- Icon 1: Employee Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_employee_info"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_employee_info"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Info"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 2: Attendance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_attendance"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_attendance"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 3: Pay Leave -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_pay_leave"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_pay_leave"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Leave"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 4: Leave Slip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_leave_slip"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_leave_slip"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Slip"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 5: Overtime -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_overtime"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_overtime"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overtime"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 6: Pay Slip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_pay_slip"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_pay_slip"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Slip"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 7: Circular -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_circular"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_circular"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circular"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 8: Leave Approval -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_leave_approval"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_leave_approval"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Approval"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 9: Overtime Approval -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_overtime_approval"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_overtime_approval"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overtime Approval"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Icon 10: Pay Scale Approval -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ripple_effect">
            <ImageButton
                android:id="@+id/btn_pay_scale_approval"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_pay_scale_approval"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Scale Approval"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>

    </GridLayout>

</LinearLayout>
    </ScrollView>
